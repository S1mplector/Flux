<Window x:Class="Equalizer.Presentation.Splash.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Equalizer" Width="420" Height="220" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#FFCCCCCC" Background="#FF1E1E1E" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock Text="Equalizer" FontSize="20" FontWeight="Bold" Foreground="White" />
                <TextBlock x:Name="VersionText" FontSize="12" Foreground="#FFCCCCCC" Margin="0,4,0,0" />
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Margin="0,16,0,16">
                <ProgressBar IsIndeterminate="True" Height="18" />
                <TextBlock x:Name="StatusText" Text="Starting..." Foreground="#FFEEEEEE" Margin="0,12,0,0" />
            </StackPanel>

            <TextBlock Grid.Row="2" Text="Caching and optimizing startup..." FontSize="10" Foreground="#FF888888" HorizontalAlignment="Right" />
        </Grid>
    </Border>
</Window>
