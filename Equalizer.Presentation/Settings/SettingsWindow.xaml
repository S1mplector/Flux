<Window x:Class="Equalizer.Presentation.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Equalizer Settings" Width="520" Height="520" MinWidth="480" MinHeight="420" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Audio response" FontWeight="Bold" Margin="0,0,0,4"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Bars" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <Slider x:Name="BarsSlider" Grid.Row="1" Grid.Column="1" Minimum="8" Maximum="256" TickFrequency="8" IsSnapToTickEnabled="True"/>
        <TextBox x:Name="BarsValue" Grid.Row="1" Grid.Column="2" Margin="8,0,0,0"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Responsiveness" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="RespSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="1" TickFrequency="0.05" Margin="0,8,0,0"/>
        <TextBox x:Name="RespValue" Grid.Row="2" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Smoothing" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="SmoothSlider" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="1" TickFrequency="0.05" Margin="0,8,0,0"/>
        <TextBox x:Name="SmoothValue" Grid.Row="3" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="Color" FontWeight="Bold" Margin="0,12,0,4"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Color (RGB)" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical" Margin="0,8,0,0">
            <Slider x:Name="ColorR" Minimum="0" Maximum="255"/>
            <Slider x:Name="ColorG" Minimum="0" Maximum="255" Margin="0,8,0,0"/>
            <Slider x:Name="ColorB" Minimum="0" Maximum="255" Margin="0,8,0,0"/>
            <Button x:Name="PickColorButton" Content="Pick Color..." HorizontalAlignment="Left" Margin="0,8,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Vertical" Margin="8,8,0,0">
            <TextBox x:Name="ColorRValue"/>
            <TextBox x:Name="ColorGValue" Margin="0,4,0,0"/>
            <TextBox x:Name="ColorBValue" Margin="0,4,0,0"/>
        </StackPanel>
        

        <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Text="Performance" FontWeight="Bold" Margin="0,12,0,4"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Target FPS" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="FpsSlider" Grid.Row="8" Grid.Column="1" Minimum="10" Maximum="240" TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,8,0,0"/>
        <TextBox x:Name="FpsValue" Grid.Row="8" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="9" Grid.Column="0" Text="Cycle color" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <CheckBox x:Name="ColorCycleEnabled" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0" Content="Enable"/>

        <TextBlock Grid.Row="10" Grid.Column="0" Text="Cycle speed (Hz)" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="ColorCycleSpeed" Grid.Row="10" Grid.Column="1" Minimum="0" Maximum="5" TickFrequency="0.1" Margin="0,8,0,0"/>
        <TextBox x:Name="ColorCycleSpeedValue" Grid.Row="10" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="11" Grid.Column="0" Text="Bar corner radius" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="CornerRadiusSlider" Grid.Row="11" Grid.Column="1" Minimum="0" Maximum="16" TickFrequency="1" Margin="0,8,0,0"/>
        <TextBox x:Name="CornerRadiusValue" Grid.Row="11" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" Text="Display" FontWeight="Bold" Margin="0,12,0,4"/>

        <TextBlock Grid.Row="13" Grid.Column="0" Text="Display on" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <ComboBox x:Name="DisplayModeCombo" Grid.Row="13" Grid.Column="1" Margin="0,8,0,0">
            <ComboBoxItem Content="All monitors" Tag="0" />
            <ComboBoxItem Content="Primary monitor only" Tag="1" />
            <ComboBoxItem Content="Specific monitor" Tag="2" />
        </ComboBox>

        <TextBlock Grid.Row="14" Grid.Column="0" Text="Monitor" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <ComboBox x:Name="MonitorCombo" Grid.Row="14" Grid.Column="1" Margin="0,8,0,0" IsEnabled="False"/>

        <TextBlock Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="3" Text="Visualizer" FontWeight="Bold" Margin="0,12,0,4"/>

        <TextBlock Grid.Row="16" Grid.Column="0" Text="Visualizer mode" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <ComboBox x:Name="VisualizerModeCombo" Grid.Row="16" Grid.Column="1" Margin="0,8,0,0">
            <ComboBoxItem Content="Bars" Tag="0" />
            <ComboBoxItem Content="Circular" Tag="1" />
        </ComboBox>

        <TextBlock Grid.Row="17" Grid.Column="0" Text="Circle diameter" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="CircleDiameterSlider" Grid.Row="17" Grid.Column="1" Minimum="100" Maximum="2000" TickFrequency="50" Margin="0,8,0,0"/>
        <TextBox x:Name="CircleDiameterValue" Grid.Row="17" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="3" Text="Silence &amp; fading" FontWeight="Bold" Margin="0,12,0,4"/>

        <TextBlock Grid.Row="19" Grid.Column="0" Text="Performance profile" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <ComboBox x:Name="ProfileCombo" Grid.Row="19" Grid.Column="1" Margin="0,8,0,0">
            <ComboBoxItem Content="Custom" Tag="custom" />
            <ComboBoxItem Content="Smooth" Tag="smooth" />
            <ComboBoxItem Content="Balanced" Tag="balanced" />
            <ComboBoxItem Content="Low latency" Tag="low" />
        </ComboBox>

        <TextBlock Grid.Row="20" Grid.Column="0" Text="Fade on silence" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <CheckBox x:Name="FadeOnSilenceEnabledCheckBox" Grid.Row="20" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0" Content="Enable"/>

        <TextBlock Grid.Row="21" Grid.Column="0" Text="Fade-out time (s)" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="FadeOutSlider" Grid.Row="21" Grid.Column="1" Minimum="0.1" Maximum="5" TickFrequency="0.1" Margin="0,8,0,0"/>
        <TextBox x:Name="FadeOutValue" Grid.Row="21" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="22" Grid.Column="0" Text="Fade-in time (s)" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="FadeInSlider" Grid.Row="22" Grid.Column="1" Minimum="0.1" Maximum="5" TickFrequency="0.1" Margin="0,8,0,0"/>
        <TextBox x:Name="FadeInValue" Grid.Row="22" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="23" Grid.Column="0" Grid.ColumnSpan="3" Text="Dynamics &amp; effects" FontWeight="Bold" Margin="0,12,0,4"/>

        <TextBlock Grid.Row="24" Grid.Column="0" Text="Bass emphasis" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="BassEmphasisSlider" Grid.Row="24" Grid.Column="1" Minimum="0" Maximum="2" TickFrequency="0.1" Margin="0,8,0,0"/>
        <TextBox x:Name="BassEmphasisValue" Grid.Row="24" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="25" Grid.Column="0" Text="Treble emphasis" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <Slider x:Name="TrebleEmphasisSlider" Grid.Row="25" Grid.Column="1" Minimum="0" Maximum="2" TickFrequency="0.1" Margin="0,8,0,0"/>
        <TextBox x:Name="TrebleEmphasisValue" Grid.Row="25" Grid.Column="2" Margin="8,8,0,0"/>

        <TextBlock Grid.Row="26" Grid.Column="0" Text="Glow effect" VerticalAlignment="Center" Margin="0,8,8,0"/>
        <CheckBox x:Name="GlowEnabledCheckBox" Grid.Row="26" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0" Content="Enable"/>

        </Grid>
        </ScrollViewer>

        <StatusBar Grid.Row="1" Margin="8,0,8,0">
            <StatusBarItem>
                <TextBlock x:Name="CpuUsageText" Text="CPU: -- %" Margin="0,0,16,0" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="MemoryUsageText" Text="RAM: -- MB" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="FpsText" Text="FPS: --" Margin="16,0,0,0" />
            </StatusBarItem>
        </StatusBar>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,8,12,12">
            <Button x:Name="SaveButton" Content="Save" Width="100" Margin="0,0,8,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
